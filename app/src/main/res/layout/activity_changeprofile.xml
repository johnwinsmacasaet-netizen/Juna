<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_background"
    tools:context=".changeprofile">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="User Profile"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/background_ovall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <EditText
            android:id="@+id/ffname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background1"
            android:hint="First Name"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:textColor="#4071b2"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <EditText
            android:id="@+id/cpass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_background1"
            android:drawablePadding="8dp"
            android:hint="Password"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            app:layout_constraintTop_toBottomOf="@+id/ffname" />

    <TextView
        android:id="@+id/hobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobby"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cpass" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/hobby"
        tools:layout_editor_absoluteX="10dp">

        <Button
            android:id="@+id/btnReading"
            style="@style/ChipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background"
            android:text="Reading"
            android:textColor="#5C6BC0"
            android:textStyle="bold"
            android:textSize="9dp" />

        <Button
            android:id="@+id/btnListening"
            style="@style/ChipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittext_background"
            android:text="Listening"
            android:textColor="#5C6BC0"
            android:textStyle="bold"
            android:textSize="9dp" />

        <Button
            android:id="@+id/btnWatching"
            style="@style/ChipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittext_background"
            android:text="Watching"
            android:textColor="#5C6BC0"
            android:textStyle="bold"
            android:textSize="9dp" />

        <Button
            android:id="@+id/Travel"
            style="@style/ChipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittext_background"
            android:text="Travel"
            android:textColor="#5C6BC0"
            android:textStyle="bold"
            android:textSize="9dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="4dp">

        <Button
            android:id="@+id/btnWriting"
            style="@style/ChipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/edittext_background"
            android:text="writing"
            android:textColor="#5C6BC0"
            android:textStyle="bold"
            android:textSize="9dp" />

        <Button
            android:id="@+id/Dancing"
            style="@style/ChipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittext_background"
            android:text="Dancing"
            android:textColor="#5C6BC0"
            android:textStyle="bold"
            android:textSize="9dp" />

        <Button
            android:id="@+id/btnSinging"
            style="@style/ChipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittext_background"
            android:text="Singing"
            android:textColor="#5C6BC0"
            android:textStyle="bold"
            android:textSize="9dp" />

        <Button
            android:id="@+id/Art"
            style="@style/ChipButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:text="Art"
            android:textColor="#5C6BC0"
            android:textStyle="bold"
            android:textSize="9dp" />
    </LinearLayout>

    <Button
        android:id="@+id/facebook"
        style="@android:style/Widget.Button"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_weight="0.5"
        android:background="@drawable/edittext_background"
        android:padding="16dp"
        android:text="Update"
        android:layout_marginTop="25dp"
        android:textColor="#4071b2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/more" />
</androidx.constraintlayout.widget.ConstraintLayout>